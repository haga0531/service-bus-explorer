<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:ServiceBusExplorer.UI"
        x:Class="ServiceBusExplorer.UI.SendMessageDialog"
        x:DataType="vm:SendMessageDialogViewModel"
        Title="Send Message"
        Width="600" Height="500"
        WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20" RowDefinitions="Auto,Auto,Auto,*,Auto,Auto">
        <!-- Destination info -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding DestinationPath, StringFormat='Send to: {0}'}"
                   FontWeight="Bold"
                   Margin="0,0,0,10" />
        
        <!-- Message properties -->
        <Grid Grid.Row="1" ColumnDefinitions="Auto,*" RowDefinitions="Auto,Auto,Auto" Margin="0,0,0,10">
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Label:" VerticalAlignment="Center" Margin="0,0,10,5" />
            <TextBox Grid.Row="0" Grid.Column="1" 
                     Text="{Binding Label}"
                     Watermark="Optional message label"
                     Margin="0,0,0,5" />
            
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Content Type:" VerticalAlignment="Center" Margin="0,0,10,5" />
            <TextBox Grid.Row="1" Grid.Column="1" 
                     Text="{Binding ContentType}"
                     Watermark="e.g. application/json"
                     Margin="0,0,0,5" />
            
                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Format:" VerticalAlignment="Center" Margin="0,0,10,0" />
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Spacing="8">
                <ComboBox SelectedIndex="{Binding MessageFormat}"
                          HorizontalAlignment="Stretch"
                          Width="200">
                    <ComboBoxItem>Plain Text</ComboBoxItem>
                    <ComboBoxItem>JSON</ComboBoxItem>
                    <ComboBoxItem>XML</ComboBoxItem>
                </ComboBox>
                <Button Content="Format"
                        Command="{Binding FormatJsonCommand}"
                        IsVisible="{Binding IsFormatButtonVisible}"
                        Width="70" />
            </StackPanel>
        </Grid>
        
        <!-- Message body label -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,5">
            <TextBlock Text="Message Body:" />
            <TextBlock Text=" ✓ Valid JSON" 
                       Foreground="Green"
                       FontWeight="Bold"
                       Margin="10,0,0,0"
                       IsVisible="{Binding IsValidJson}" />
            <TextBlock Text=" ✓ Valid XML" 
                       Foreground="Green"
                       FontWeight="Bold"
                       Margin="10,0,0,0"
                       IsVisible="{Binding IsValidXml}" />
        </StackPanel>
        
        <!-- Message body -->
        <Border Grid.Row="3" 
                BorderBrush="LightGray" 
                BorderThickness="1"
                Margin="0,0,0,10">
            <ScrollViewer>
                <TextBox Text="{Binding MessageBody}"
                         AcceptsReturn="True"
                         TextWrapping="NoWrap"
                         FontFamily="Cascadia Code,Consolas,Menlo,Monaco,monospace"
                         FontSize="13"
                         Padding="8" />
            </ScrollViewer>
        </Border>
        
        <!-- Error message -->
        <Border Grid.Row="4" 
                Background="#FFFFCC" 
                Padding="8,4"
                BorderBrush="#FFCC00" 
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,0,10"
                IsVisible="{Binding ErrorMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}">
            <TextBlock Text="{Binding ErrorMessage}" 
                       Foreground="#CC0000"
                       TextWrapping="Wrap" />
        </Border>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="8">
            <ProgressBar IsIndeterminate="True" 
                         Width="100"
                         Height="3"
                         VerticalAlignment="Center"
                         IsVisible="{Binding IsSending}" />
            <Button Content="Cancel" 
                    Command="{Binding CancelCommand}"
                    IsEnabled="{Binding !IsSending}" />
            <Button Content="Send" 
                    Command="{Binding SendCommand}"
                    IsDefault="True"
                    Classes="accent"
                    IsEnabled="{Binding !IsSending}">
                <Button.IsVisible>
                    <Binding Path="IsSending" Converter="{x:Static BoolConverters.Not}" />
                </Button.IsVisible>
            </Button>
            <Button Content="Sending..." 
                    IsEnabled="False"
                    Classes="accent">
                <Button.IsVisible>
                    <Binding Path="IsSending" />
                </Button.IsVisible>
            </Button>
        </StackPanel>
    </Grid>
</Window> 
