<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:ServiceBusExplorer.UI"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ServiceBusExplorer.UI.LoadingOverlay"
             x:DataType="vm:MessageListViewModel">
    
    <Grid Background="#80000000">
        <Border Background="White"
                CornerRadius="8"
                Padding="30"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BoxShadow="0 4 20 0 #40000000">
            <StackPanel Spacing="20" MinWidth="300">
                <TextBlock Text="{Binding LoadingMessage}"
                           FontSize="16"
                           FontWeight="SemiBold"
                           HorizontalAlignment="Center"
                           TextWrapping="Wrap"
                           MaxWidth="400" />
                
                <ProgressBar IsIndeterminate="True"
                             Height="6" />
                
                <TextBlock Text="{Binding ProgressMessage}"
                           HorizontalAlignment="Center"
                           Foreground="Gray"
                           IsVisible="{Binding ProgressMessage, Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />
                
                <Button Content="Cancel"
                        Command="{Binding CancelLoadingCommand}"
                        HorizontalAlignment="Center"
                        Background="#D32F2F"
                        Foreground="White"
                        FontWeight="Bold"
                        Padding="20,8"
                        Width="120" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
